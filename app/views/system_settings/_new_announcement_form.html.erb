<%= form_for @system_setting, url: create_announcement_path do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Announcement</h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
        <%= f.label :setting_attribute, "Choose a hub for announcement (leave blank for all hubs)" %>
        <%= f.select :setting_attribute, options_for_select(@hubs),include_blank: true, class:"chosen-select" %>
    </div>
    <div class="form-group">
        <%= f.label :setting_value, "Announcement" %>
        <%= f.text_area :setting_value, class: "form-control", rows: 6 %>
    </div>
    <div class="form-group">
        <%= f.label :expiry_date, "Expiry Date" %>
        <%= f.date_field :expiry_date, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-md btn-default m-t-sm" data-dismiss="modal">Close</button>
    <%= f.submit "Create announcement", class: "btn btn-md btn-default m-t-sm" %>
  </div>
<% end %>