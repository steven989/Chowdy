<%= form_for @scheduled_task do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Scheduled Task</h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
        <%= f.label :task_name, "Task name (must match rake task)" %>
        <%= f.text_field :task_name, class: "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :day_of_week, "Day of week (Sunday is 0 - Saturday is 6)" %>
        <%= f.number_field :day_of_week, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :hour_of_day, "Hour of day (0-23)" %>
        <%= f.number_field :hour_of_day, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_1 %>
        <%= f.text_field :parameter_1, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_1_type %>
        <%= f.text_field :parameter_1_type, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_2 %>
        <%= f.text_field :parameter_2, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_2_type %>
        <%= f.text_field :parameter_2_type, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_3 %>
        <%= f.text_field :parameter_3, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :parameter_3_type %>
        <%= f.text_field :parameter_3_type, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-md btn-default m-t-sm" data-dismiss="modal">Close</button>
    <%= f.submit class: "btn btn-md btn-default m-t-sm" %>
  </div>
<% end %>