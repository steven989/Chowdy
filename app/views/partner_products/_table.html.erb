
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= @vendor.vendor_name %>'s Products <%= link_to 'Add Product', new_partner_product_path+'?vendor_id='+@vendor.id.to_s, class:"nestedForm btn btn-s-md btn-warning btn-rounded" %></h4>
</div>
<div class="modal-body">
      <table class="partner_products_table display table table-striped m-b-none" style="font-size: 12px">
        <thead>
          <tr>
            <th>Edit</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Size</th>
            <th>Vendor SKU</th>
            <th>Vendor UPC</th>
            <th>Date added</th>
          </tr>
        </thead>
        <tbody>
          <% @vendor_products.each do |p| %>
            <tr>
              <td>
                <%= link_to 'Edit', edit_partner_product_path(p)+'?vendor_id='+@vendor.id.to_s, class:"nestedForm btn btn-s-md btn-warning btn-rounded", style: "min-width: 0px;width: 60px;" %></td>
              <td><%= p.product_name %></td>
              <td><%= p.product_description %></td>
              <td><%= p.product_size %></td>
              <td><%= p.vendor_product_sku %></td>
              <td><%= p.vendor_product_upc %></td>
              <td><%= p.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-md btn-default m-t-sm" data-dismiss="modal">Close</button>
</div>