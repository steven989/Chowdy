<%= form_for @start_date, url: update_start_date_path, method: :put do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Change start date</h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control"  %>
    </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-md btn-default m-t-sm" data-dismiss="modal">Close</button>
    <%= f.submit class: "btn btn-md btn-default m-t-sm" %>
  </div>
<% end %>